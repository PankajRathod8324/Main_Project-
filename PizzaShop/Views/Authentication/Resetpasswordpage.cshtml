@model DAL.ViewModel.ResetPasswordVM

@{
    Layout = "_Layout1";
    ViewData["Title"] = "Reset Password Page";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza Shop</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/media.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="row h-100 w-100">
            <!-- Left Image Section -->
            <div class="col-6 p-0 overflow-hidden">
                <img src="~/assest/dominos_background.jpg" class="img-fluid h-100 w-100" style="object-fit: cover;"
                    alt="Background Image">
            </div>

            <!-- Login Form Section -->
            <div class="col-lg-6 col-md-12 resetPasswordBackground d-flex flex-column justify-content-center align-items-center px-3">
                <div class="col-lg-9 col-md-10 col-sm-12 p-5">
                    <div class="d-flex align-items-center justify-content-center mb-4">
                        <img class="me-2" src="~/assest/logos/pizzashop_logo.png" alt="Pizzashop Logo" style="width: 60px;">
                        <div class="fs-3 fw-bold">PIZZASHOP</div>
                    </div>
                    
                    <form asp-action="ResetPassword" method="post">
                        
                        <div class="mb-3 fs-4">Reset Your Password</div>
                        <div class="input-group mb-3">
                            <input id="password1" asp-for="NewPassword" class="form-control form-control-lg" type="password"
                                placeholder="New Password" aria-label="Password">
                            <span class="input-group-text"><i id="togglePassword" class="fas fa-eye"></i></span>
                        </div>
                        <div id="passwordMessage" class="text-danger text-center mb-3" style="display: none;">Please enter password</div>
                        
                        <div class="input-group mb-3">
                            <input id="password2" asp-for="ConfirmPassword" class="form-control form-control-lg" type="password"
                                placeholder="Confirm New Password" aria-label="Password">
                            <span class="input-group-text"><i id="togglePassword" class="fas fa-eye"></i></span>
                        </div>
                        <div id="passwordMessage" class="text-danger text-center mb-3" style="display: none;">Please enter password</div>
                        <input asp-for="Email" class="d-none"></span>
                        <input asp-for="Token" class="d-none"></span>
                        <div class="d-grid">
                            <button type="submit" value="submit" class="btn btn-primary btn-lg text-white text-center">Go To Login Page</a>
                        </div>
                        

                      
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
    <script src="~/js/loginPage.js"></script>
</body>

</html>